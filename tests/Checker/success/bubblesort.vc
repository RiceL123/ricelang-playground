// Bubble sort algorithm

// Swaps elements at indices i and j in array a
void swap(int a[], int i, int j) {
    int temp = a[i];
    a[i] = a[j];
    a[j] = temp;
}

// Bubble sorts an array of size n
void bubbleSort(int a[], int n) {
    int i, j;

    for (i = 0; i < n - 1; i = i + 1)
        for (j = 0; j < n - i - 1; j = j + 1)
            if (a[j] > a[j + 1])
                swap(a, j, j + 1);
}

// Prints an array of size n
void printArr(int a[], int n) {
    int i;

    putString("[");
    for (i = 0; i < n; i = i + 1) {
        putInt(a[i]);
        if (i < n - 1)
            putString(", ");
    }

    putStringLn("]");
}

int main() {
    int n = 5;
    int a[] = { 5, 4, 3, 2, 1 };

    bubbleSort(a, n);
    printArr(a, n);
    return 0;
}
