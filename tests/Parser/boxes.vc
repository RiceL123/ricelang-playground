int mod(int a, int b) {
    return a - a / b * b;
}

int main() {
    int n;
    int size;
    int row;
    int col;

    putString("How many boxes: ");
    n = getInt();

    size = 4 * n - 1;

    for (row = 0; row < size; row = row + 1) {
        for (col = 0; col < size; col = col + 1) {
            if (!mod(row, 2) && (!mod(col, 2) || row < col && row < size - col || row >= col && row >= size - col) ||
                !mod(col, 2) && (col < row && col < size - row || col >= row && col >= size - row)) {
                putString("*");
            } else {
                putString("-");
            }
        }
        putLn();
    }
}
