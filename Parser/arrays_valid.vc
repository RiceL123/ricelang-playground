// when an array is used as a declarator, it must have an INTLITEARL? between the brackets
// identifier "[" INTLITERAL? "]"

// valid global arrays
int arr[];
boolean arr[2];
float arr[3] = {1, 2, 3};
void arr[2];

// valid local arrays
int main() {
    int arr[];
    boolean arr[2];
    float arr[3] = {1, 2, 3};
    void arr[2];
}

// valid arrays in function params
int main(int arr[], boolean arr[0], float arr[], void arr[2]) {}

// arrays as primary-expr can be accessed with any expr
// int a = arr[]; // this is illegal - no empty expr for expr arr access
int a = arr[1 == 2];
int a = arr["string is an expr"];
int a = arr[i = 2]; // assignment expr is an expr
int a = arr[!i];
int a = arr[12312.123];
int a = { arr[2 && 3.0] || arr[i <= 9], arr[i * 7 || 3 && 2 + (4 = 3) - (!2.1)] };
